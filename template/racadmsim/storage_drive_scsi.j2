{% macro get_rotation(drive) %}
    {% if drive.rotation %}{{ drive.rotation }}{% else %}7200{% endif %}
{% endmacro %}
{% macro random_n_element(n)%}
    {% for i in range(n) %}{{ '0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ'|random }}{% endfor %}
{% endmacro %}
{% macro get_part_number(drive) %}
    {% if get_rotation(drive)|int < 2 %}PH077K162640262E0{{ random_n_element(3) }}A00{% else %}TH0XWM1W212336360{{ random_n_element(3) }}A00{% endif %}
{% endmacro %}

