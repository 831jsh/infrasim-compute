   Name                             = {% if get_rotation(drive)|int < 2 %}Solid State Disk{% else %}Physical Disk{% endif %} 0:1:{{ drive.slot }}
   State                            = Non-Raid
   OperationState                   = Not Applicable
   PowerStatus                      = Spun-Up
   Size                             = {{ drive.size_gb }} GB
   FailurePredicted                 = NO
   RemainingRatedWriteEndurance     = Not Applicable
   SecurityStatus                   = Not Capable
   BusProtocol                      = SAS
   MediaType                        = HDD
   UsedRaidDiskSpace                = 0.00 GB
   AvailableRaidDiskSpace           = 0.00 GB
   Hotspare                         = NO
   Manufacturer                     = {{ drive.vendor }}
   ProductId                        = {{ drive.product }}
   Revision                         = {{ drive.version }}
   SerialNumber                     = {{ drive.serial }}
   PartNumber                       = {{ get_part_number(drive) }}
   NegotiatedSpeed                  = 12.0 Gb/s
   ManufacturedDay                  = 2
   ManufacturedWeek                 = 9
   ManufacturedYear                 = 2016
   SasAddress                       = {{ drive.wwn }}
