<domain type='{{node.virtual_type}}'>
  <name>{{node.name}}</name>
  <uuid>{{node.uuid}}</uuid>
  <memory unit='MB'>{{node.mem_size}}</memory>
  <vcpu>{{node.vcpu_num}}</vcpu>
  <os>
    <type arch='x86_64' >hvm</type>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/>
    <apic/>
  </features>
  <cpu mode='custom' match='exact'>
    <model fallback='allow'>{{node.vcpu_type}}</model>
  </cpu>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>
    {%for disk in node.disks%}
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='{{disk.file}}'/>
      <backingStore/>
      <target dev='{{disk.dev}}' bus='sata'/>
      <alias name='{{disk.name}}'/>
    </disk>
    {%endfor%}
    <disk type='block' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <source dev='/dev/sr0'/>
      <backingStore/>
      <target dev='hda' bus='ide'/>
      <readonly/>
      <alias name='ide0-0-0'/>
    </disk>
    <controller type='sata' index='0'>
      <alias name='sata0'/>
    </controller>
    <controller type='ide' index='0'>
      <alias name='ide0'/>
    </controller>
    {%for net in node.nets%}
    <interface type='network'>
      <mac address='{{net.mac}}'/>
      <source network='default' bridge='virbr0'/>
      <model type='e1000'/>
    </interface>
    {%endfor%}
    <serial type='udp'>
      <source mode='bind' host='127.0.0.1' service='9002'/>
      <source mode='connect' host='127.0.0.1' service='9002'/>
      <target port='0'/>
    </serial>
    <input type='mouse' bus='ps2'/>
    <input type='keyboard' bus='ps2'/>
    <graphics type='vnc' port='5902' autoport='yes' listen='0.0.0.0' keymap='en-us'>
      <listen type='address' address='0.0.0.0'/>
    </graphics>
  </devices>
</domain>

